@model IEnumerable<AutoKomis.Models.Pracownik>

<div class="title-cointainer">
    <div class="row pt-4">
        <h1 class="index-title">Pracownicy</h1>
    </div>
</div>

<form method="get" asp-controller="Pracownik" asp-action="ZnajdzPracownika">
    <div class="action-conatiner">
        <div class="action">
            <h3 class="title-action">Szukaj stanowiska: </h3>
            <div class="look-for">
                <select id="select-options" name ="_stanowisko">
                    <option type="text" value="Sprzedawca">Sprzedawca</option>
                    <option type="text" value="Kierownik">Kierownik</option>
                    <option type="text" value="Księgowa">Księgowa</option>
                    <option type="text" value="Detailer">Detailer</option>
                </select>
                <input type="submit" class="szukaj" value="Szukaj" />
            </div>
        </div>
        <div class="action">
            <h3 class="title-action">Dodaj pracownika: </h3>
            <div class="add-action">
                <a class="add-logo" asp-area="" asp-controller="Pracownik" asp-action="CreatePracownik">
                    <img id="add-icon" src="https://img.icons8.com/wired/64/000000/create-new.png" />
                </a>
            </div>
        </div>
    </div>
</form>



@if (Model.Count() > 0)
{
    <table id="table-container" class="table table-striped table-dark table-bordered table-hover table-sm">
        <thead>
            <tr class="name-of-headers">
                <th>IdPracownika</th>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Stanowisko</th>
                @*  <th>Nr dowodu</th>*@
                <th>Modyfikuj</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pracownik in Model)
            {
                <tr class="table-rows">
                    <td width="15%">@pracownik.IdPracownika</td>
                    <td width="15%">@pracownik.Imie</td>
                    <td width="15%">@pracownik.Nazwisko</td>
                    <td width="15%">@pracownik.Stanowisko</td>
                    @*  <td width="15%">@pracownik.NrDowodu</td>*@
                    <td id="modify-row" width="15%">
                        <div class="modify">
                            <a asp-controller="Pracownik" asp-action="UpdatePracownik" asp-route-Id="@pracownik.IdPracownika">
                                <img src="https://img.icons8.com/external-bartama-glyph-64-bartama-graphic/64/000000/external-update-programming-glyph-bartama-glyph-64-bartama-graphic.png" />
                            </a>
                            <a asp-controller="Pracownik" asp-action="DeletePracownikPost" asp-route-Id="@pracownik.IdPracownika">
                                <img src="https://img.icons8.com/external-smashingstocks-glyph-smashing-stocks/66/000000/external-delete-time-smashingstocks-glyph-smashing-stocks.png" />
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <p id="Brak">Baza pracowników jest pusta !!!</p>
}